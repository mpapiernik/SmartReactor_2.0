{{#if appHeader}}
<!-- BEGIN Page Header -->
<header class="page-header" role="banner">

	<!-- we need this logo when user switches to nav-function-top -->
	{{> include/_logo }}

	{{#if appLayoutShortcut}}
	<!-- DOC: nav menu layout change shortcut -->

	{{/if}}

	<div class="mr-auto hidden-md-down dropdown-icon-menu position-relative">
		<a href="#" class="header-btn btn js-waves-off" data-action="toggle" data-class="nav-function-hidden"
			title="Hide Client List">
			<i class="ni ni-minify-nav"></i>
		</a>
	</div>

	<div class="ml-auto d-flex nav-menu-wrapper">

			{{> include/_nav }}

		<!-- app user menu -->
		<div>
			<a href="#" data-toggle="dropdown" title="{{email}}"
				class="header-icon d-flex align-items-center justify-content-center ml-2">
				<img src="img/demo/avatars/{{avatar}}" class="profile-image rounded-circle" alt="{{user}}">
				<!-- you can also add username next to the avatar with the codes below:
				<span class="ml-1 mr-1 text-truncate text-truncate-header hidden-xs-down">Me</span>
				<i class="ni ni-chevron-down hidden-xs-down"></i> -->
			</a>
			<div class="dropdown-menu dropdown-menu-animated dropdown-lg">
				{{> include/_dropdown-menu}}
			</div>
		</div>

	</div>

</header>
<!-- END Page Header -->
{{/if}}